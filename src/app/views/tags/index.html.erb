<% provide(:title, 'Tags') %>
<h1>Tags</h1>
<div class="container">
  <div class="row">
    <%= link_to "Add Tag", new_project_tag_path(@project), class: "btn btn-primary" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <%= render @tags, project: @project %>  
      </tbody>
    </table>
    <%= paginate @tags %>
  </div>
</div>