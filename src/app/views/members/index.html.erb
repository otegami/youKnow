<% provide(:title, 'Projects') %>
<h1>Members</h1>
# I want to show this parts for only owner
<% if owner?(@project) %>
  <div class="container">
    <div class="row">
      <%= link_to "Add Member", new_project_member_path(@project), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Owner</th>
        </tr>
      </thead>
      <tbody>
        <%= render @members, project: @project %>  
      </tbody>
    </table>
    <%= paginate @members %>
  </div>
</div>