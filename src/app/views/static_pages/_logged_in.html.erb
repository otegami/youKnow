<% provide(:title, 'Projects') %>
<h1>All Projects</h1>
<div class="container">
  <div class="row">
    <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
  </div>
</div>
<% if projects.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render projects %>
    </tbody>
  </table>
  <%= paginate projects %>
<% else %>
  <p>
    Please create new project or join in other projects!!
  </p>
<% end %>